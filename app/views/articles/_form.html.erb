<div class="container">


<%= form_with model: article do |form| %>
  <p> <%= form.label :body, "Введите текст статьи" %></p>
  <p><%= form.text_area :body%></p>

  <p class="mt"><%= form.label :title, "Заголовок статьи" %></p>
  <p><%= form.text_field :title %></p>

  <p class="mt"><%= form.submit "Сохранить" %></p>
  <%= link_to "Назад", :back %>
<% end %>
</div>
