<div class="container wrapper-reg">
  <h2 class="title-lg ">Вход</h2>

  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: {turbo:false} do |form| %> 
        <p> <%= form.label :email %></p>
        <p> <%= form.text_field :email %></p>

        <p> <%= form.label :password %></p>
        <p> <%= form.password_field :password %></p>

        <p class="mt"> <%= form.submit 'Войти', class: "button-lg" %></p>
    <%  end %>
  </div>
</div>
